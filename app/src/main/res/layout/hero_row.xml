<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:background="?attr/selectableItemBackground"
    android:gravity="center_vertical">

    <!-- Imagen del personaje con placeholder del sistema -->
    <ImageView
        android:id="@+id/imageHero"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="centerCrop"
        android:src="@android:drawable/ic_menu_gallery"
        android:contentDescription="@string/hero_image"
        android:layout_marginEnd="12dp"/>

    <!-- Contenedor de texto -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/nameHero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            tools:text="Goku"/>

        <TextView
            android:id="@+id/lifeInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            tools:text="Life: 80/100"/>

        <!-- Barra de vida estÃ¡ndar -->
        <ProgressBar
            android:id="@+id/lifeBar"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:max="100"
            android:progress="80"/>
    </LinearLayout>

</LinearLayout>