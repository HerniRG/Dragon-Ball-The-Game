<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:contentDescription="@string/ball_dragon"
        android:src="@mipmap/ball"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/textAsunto"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/asunto"
        android:padding="10dp"
        app:layout_constraintStart_toEndOf="@id/imageView"
        app:layout_constraintEnd_toStartOf="@id/textFecha"
        app:layout_constraintBottom_toBottomOf="@id/textContenido"
        app:layout_constraintTop_toTopOf="@id/imageView"/>

    <TextView
        android:id="@+id/textContenido"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/contenido"
        android:padding="10dp"
        app:layout_constraintStart_toStartOf="@id/textAsunto"
        app:layout_constraintEnd_toStartOf="@id/textEstrellita"
        app:layout_constraintTop_toTopOf="@id/textAsunto"
        app:layout_constraintBottom_toBottomOf="@id/imageView"/>

    <TextView
        android:id="@+id/textFecha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/fecha"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/textEstrellita"
        app:layout_constraintTop_toTopOf="@id/imageView"/>

    <TextView
        android:id="@+id/textEstrellita"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/estrellita"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/textFecha"
        app:layout_constraintBottom_toBottomOf="@id/imageView"/>

</androidx.constraintlayout.widget.ConstraintLayout>